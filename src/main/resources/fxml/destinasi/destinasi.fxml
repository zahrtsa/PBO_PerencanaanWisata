<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="destinasiContainer" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.desty5.controllers.DestinasiController"
      alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;">
    <!-- Gambar Destinasi -->
    <ImageView fx:id="gambarImageView" fitWidth="300" fitHeight="200" preserveRatio="true" />

    <!-- Nama Destinasi -->
    <Label fx:id="namaLabel" text="Nama Destinasi"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Lokasi Destinasi -->
    <Label fx:id="lokasiLabel" text="Lokasi Destinasi"
           style="-fx-font-size: 14px;" />

    <!-- Deskripsi -->
    <Label fx:id="deskripsiLabel" text="Deskripsi Destinasi"
           wrapText="true" style="-fx-font-size: 14px;" />

    <!-- Harga -->
    <Label fx:id="hargaLabel" text="Harga"
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />
</VBox>
